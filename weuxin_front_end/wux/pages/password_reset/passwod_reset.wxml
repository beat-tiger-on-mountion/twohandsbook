<view class="body">
  <text class='title'>密码重置</text>
  <form>
    <view class="page__bd">
      <wux-cell-group>
        <wux-cell hover-class="none">
          <wux-input label="手机号" placeholder="输入手机号" />
        </wux-cell>
        <wux-cell hover-class="none">
          <wux-input label="验证码" placeholder="输入验证码号" />
        </wux-cell>
        <wux-cell hover-class="none">
          <wux-input label="密码" placeholder="输入密码" password type="number" />
        </wux-cell>
        <wux-cell hover-class="none">
          <wux-input label="确认密码" placeholder="再次输入密码" password type="number" />
        </wux-cell>
      </wux-cell-group>
      <view class='buts'>
        <button class='code' type=''>获取验证码</button>
        <button class='sub' type='' bindtap='login'>提交</button>
      </view>
    </view>
  </form>
</view>